{
  "name": "fpsa-api",
  "version": "1.4.1",
  "description": "The API for the FPSA website",
  "author": "Bastiaan Verhaar",
  "license": "GPL-2.0",
  "repository": {
    "url": "https://github.com/federation-purple-study-associations/fpsa-api"
  },
  "scripts": {
    "build": "rm -rf ./dist && tsc -p tsconfig.json && ./node_modules/copyfiles/copyfiles -u 1 \"**/*.hbs\" dist",
    "start": "ts-node src/main.ts",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/typeorm.config.ts",
    "generate-services": "ts-node src/swagger/swagger.builder.ts && openapi-generator-cli generate -g typescript-inversify -i swagger-spec.json -o ../fpsa-site/src/openapi --additional-properties=\"useRxJS6=true\""
  },
  "dependencies": {
    "@nestjs/common": "^7.6.12",
    "@nestjs/core": "^7.6.12",
    "@nestjs/platform-fastify": "^7.6.12",
    "@nestjs/swagger": "^4.7.13",
    "@nestjs/typeorm": "^7.1.5",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.3.2",
    "class-validator": "^0.13.1",
    "dotenv": "^8.2.0",
    "fastify-cookie": "^5.1.0",
    "fastify-multipart": "^4.0.0",
    "fastify-swagger": "^4.3.1",
    "handlebars": "^4.7.6",
    "jsonwebtoken": "^8.5.1",
    "mime-types": "^2.1.28",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.33",
    "mysql": "^2.18.1",
    "nodemailer": "^6.4.18",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3",
    "typeorm": "^0.2.31",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.4",
    "@nestjs/schematics": "^7.2.7",
    "@openapitools/openapi-generator-cli": "^2.1.23",
    "@types/node": "^14.14.27",
    "@types/nodemailer": "^6.4.0",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "prettier": "^2.2.1",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
